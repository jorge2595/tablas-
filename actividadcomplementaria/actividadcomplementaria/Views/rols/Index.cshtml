@model IEnumerable<actividadcomplementaria.Models.rol>

@{
    ViewData["Title"] = "Index";
}

<h2>Inicio</h2>

<p>
    <a asp-action="Create">Crear nuevo</a>
</p>
<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.nombre_rol)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.descripcion)
                </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.nombre_rol)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.descripcion)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ID_rol">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.ID_rol">Detalles</a> |
                <a asp-action="Delete" asp-route-id="@item.ID_rol">Eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>
